
@{
    ViewBag.Title = "Home Page";

}
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>
<div class="jumbotron">
    <h1>Maby today was rain?</h1>
    <p class="lead">Current weather and forecasts in your city</p>

    @using (Ajax.BeginForm("GetWeatherData", "Home", new AjaxOptions


    {
        HttpMethod = "GET",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "productsTable",
        LoadingElementId = "progress"
    }))
    {
        <input name="City" type="text" />
        <input type="submit" value="Search product by name" />
    }
    <table id="productsTable"></table>
    <div id="progress" style="display: none;"></div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div>
            @Html.ValidationSummary()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <p>
                <label>City</label>
                @Html.TextBox("City")
            </p>
            <p><button type="submit">Find</button></p>
        </div>
    }
</div>

